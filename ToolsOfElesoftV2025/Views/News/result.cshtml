@{
    ViewData["Title"] = "السافت تولز";
}

<style>
    a{
        font-size:25px;
    }
</style>

<div class="container">
    <div class="section">
        <h5 class="pagetitle">السافت نگارا: هوش مصنوعی خبرنگار</h5>
    </div>
</div>
<div class="container">
    <div class="section">
        <h5 id="list" class="pagetitle">متن نهایی:</h5>
        <div class="row ">
            <div class="col s12 pad-0">
                <h5 class="bot-20 sec-tit"></h5>
                <div class="card darken-1">
                    <div class="card-content">
                        <span class="card-title">متنی که نگارا با ورودی شما نگارش کرد:</span>
                        <p>@ViewBag.Output</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="section">
        <h5 id="list" class="pagetitle">ورودی شما:</h5>
        <div class="row ">
            <div class="col s12 pad-0">
                <h5 class="bot-20 sec-tit"></h5>
                <div class="card darken-1">
                    <div class="card-content">
                        <span class="card-title">چیزی که شما به عنوان ورودی وارد کردید:</span>
                        <p>@ViewBag.Input</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>